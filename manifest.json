{
  "manifest_version": 3,
  "name": "Messenger Privacy Guard",
  "version": "1.0.0",
  "description": "Add privacy features to social platforms with intelligent blur controls",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.messenger.com/*",
    "https://messenger.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.messenger.com/*",
        "https://messenger.com/*"
      ],
      "js": ["content/blur.js"],
      "css": ["content/styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
